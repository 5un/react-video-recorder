    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier-standard": "^8.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "semantic-release": "^15.9.15",
    "standard": "^11.0.0",
    "styled-components": "^4.1.1",
    "travis-deploy-once": "^4.4.0"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier-standard",
      "standard --fix",
      "git add"
    ]
